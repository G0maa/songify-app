{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "collectCoverageFrom": ["**/src/**"],
  "coverageDirectory": "../coverage",
  "coverageProvider": "v8",
  "coverageReporters": ["lcov", "text", "text-summary"]
}
